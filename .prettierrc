{
  "tabWidth": 2,
  "semi": true,
  "endOfLine": "crlf",
  "bracketSameLine":true,
  "htmlWhitespaceSensitivity": "ignore",
  "printWidth": 100,
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "singleQuote": true
      }
    },
    {
      "files": ["*.html", "*.scss"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
